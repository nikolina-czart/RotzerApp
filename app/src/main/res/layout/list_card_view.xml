<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/background_card_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/background_card_color"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Czas trwania"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/timeCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duringAnalysis"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/background_card_color"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Długość cyklu"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/timePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W trakcie analizy"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="normal"
                android:paddingBottom="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/background_card_color"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Długość okresu"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/lengthPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W trakcie analizy"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="normal"
                android:paddingBottom="5dp"/>


        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>